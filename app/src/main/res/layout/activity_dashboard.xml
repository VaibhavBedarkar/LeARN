<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3E0"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="60sp"
            android:layout_height="80sp"
            android:background="#FFF3E0"
            android:contentDescription="Setting logo"
            android:src="@drawable/ic_dehaze_24px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="180sp"
            android:layout_height="60sp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="20sp"
            android:contentDescription="LeARn logo"
            android:src="@drawable/learn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/logout"
            app:layout_constraintStart_toEndOf="@+id/settings"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/logout"
            android:layout_width="60sp"
            android:layout_height="80sp"
            android:background="#FFF3E0"
            android:contentDescription="logout logo"
            android:src="@drawable/ic_logout_24px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:fontFamily="@font/raleway"
        android:text="@string/heading"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textSize="22sp" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10sp"
        app:cardCornerRadius="4sp"
        app:strokeColor="@color/black"
        app:strokeWidth="2sp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/law"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/oldenburg"
                android:paddingTop="2sp"
                android:text="@string/law"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/law_statement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/pacifico"
                android:text="@string/law_statement"
                android:textColor="@color/black"
                android:textSize="18sp" />


        </LinearLayout>

        <Button
            android:id="@+id/generate_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="10sp"
            android:text="@string/random_law"

            app:elevation="4sp" />
    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="14dp"
        android:fontFamily="@font/raleway"
        android:text="@string/Articles"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textSize="22sp" />

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:background="#FFAB91"
                    android:elevation="8dp"
                    android:padding="15dp"
                    android:src="@drawable/ic_dashboard_physics" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poiretone"
                    android:paddingBottom="10dp"
                    android:text="Physics"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:background="#FFCC80"
                    android:elevation="8dp"
                    android:padding="15dp"
                    android:src="@drawable/ic_dashboard_chemistry" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poiretone"
                    android:paddingBottom="10dp"
                    android:text="Chemistry"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:background="#FFE082"
                    android:elevation="8dp"
                    android:padding="15dp"
                    android:src="@drawable/ic_dashboard_biology" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poiretone"
                    android:paddingBottom="10dp"
                    android:text="Biology"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:background="#FFF59D"
                    android:elevation="8dp"
                    android:padding="15dp"
                    android:src="@drawable/ic_dashboard_history" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poiretone"
                    android:paddingBottom="10dp"
                    android:text="History"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:background="#C5E1A5"
                    android:elevation="8dp"
                    android:padding="15dp"
                    android:src="@drawable/ic_dashboard_geography" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poiretone"
                    android:paddingBottom="10dp"
                    android:text="Geography"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/extended_fab"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_margin="28dp"
        android:backgroundTint="#FFAB91"
        android:shadowColor="#B71C1C"
        android:text="Scan for AR "
        android:textAllCaps="false"
        app:icon="@drawable/ic_arobj"
        app:iconSize="40dp"
        app:strokeColor="#FE9F82"
        app:strokeWidth="2dp" />


</LinearLayout>

