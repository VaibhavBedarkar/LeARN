<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3E0"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <ImageButton
            android:id="@+id/settings"
            android:layout_width="60sp"
            android:layout_height="match_parent"
            android:background="#FFF3E0"
            android:contentDescription="Setting logo"
            android:src="@drawable/ic_dehaze_24px"
            app:layout_anchor="@+id/app_logo"
            app:layout_anchorGravity="end|center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/app_logo"
            app:layout_constraintHorizontal_bias="0.644"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/app_logo"
            android:layout_width="200sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="50sp"
            android:contentDescription="LeARn logo"
            android:src="@drawable/learn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteY="0sp" />

        <ImageButton
            android:id="@+id/logout"
            android:layout_width="60sp"
            android:layout_height="match_parent"
            android:background="#FFF3E0"
            android:contentDescription="logout logo"
            android:src="@drawable/ic_logout_24px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/app_logo"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>


    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44sp"
        android:padding="20sp"
        android:scrollbars="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_margin="10sp"
                    android:background="#FFAB91"
                    android:contentDescription="physics logo"
                    android:elevation="8sp"
                    android:padding="15sp"
                    android:src="@drawable/ic_dashboard_physics" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poiretone"
                    android:paddingBottom="10sp"
                    android:text="@string/sub_phy"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_margin="10sp"
                    android:background="#FFCC80"
                    android:elevation="8sp"
                    android:padding="15sp"
                    android:src="@drawable/ic_dashboard_chemistry" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poiretone"
                    android:paddingBottom="10sp"
                    android:text="Chemistry"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_margin="10sp"
                    android:background="#FFE082"
                    android:elevation="8sp"
                    android:padding="15sp"
                    android:src="@drawable/ic_dashboard_biology" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poiretone"
                    android:paddingBottom="10sp"
                    android:text="Biology"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_margin="10sp"
                    android:background="#FFF59D"
                    android:elevation="8sp"
                    android:padding="15sp"
                    android:src="@drawable/ic_dashboard_history" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poiretone"
                    android:paddingBottom="10sp"
                    android:text="History"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_margin="10sp"
                    android:background="#C5E1A5"
                    android:elevation="8sp"
                    android:padding="15sp"
                    android:src="@drawable/ic_dashboard_geography" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/poiretone"
                    android:paddingBottom="10sp"
                    android:text="Geography"
                    android:textColor="#000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/extended_fab"
        android:layout_width="wrap_content"
        android:layout_height="60sp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="20sp"
        android:backgroundTint="#FFAB91"
        android:shadowColor="#B71C1C"
        android:text="Scan for AR "
        android:textAllCaps="false"
        app:icon="@drawable/ic_arobj"
        app:iconSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="#FE9F82"
        app:strokeWidth="2sp" />

</androidx.constraintlayout.widget.ConstraintLayout>
